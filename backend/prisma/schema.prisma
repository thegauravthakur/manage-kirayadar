generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password Password?
  avatarUrl String?
  tenant Tenant?
  properties Property[]
  name String
}

model Otp {
  id Int @default(autoincrement()) @id
  email String @unique
  otp Int
}

model Password {
  id Int @default(autoincrement()) @id
  hash String
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

model Property {
  id Int @default(autoincrement()) @id
  name String
  address String
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int
  spaces Space[]
}

model Space {
  id Int @default(autoincrement()) @id
  name String
  property Property @relation(fields: [propertyId], references: [id])
  propertyId Int
  tenants Tenant[]
}

model Tenant {
  id Int @default(autoincrement()) @id
  email String @unique
  user User? @relation(fields: [userId], references: [id])
  userId Int? @unique
  space Space @relation(fields: [spaceId], references: [id])
  spaceId Int
}
